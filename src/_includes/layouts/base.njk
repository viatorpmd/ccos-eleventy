{% raw %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title or "Christ's Church of Starke" }}</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- Top bar -->
    <div class="top-bar">
      <span>Pastor Lester Austin • <a href="mailto:BroLester@CCofStarke.com">BroLester@CCofStarke.com</a></span>
    </div>

    <!-- Header with logo/title -->
    <header class="site-header">
      <div class="logo-title-container">
        <img src="/images/logo.png" alt="Church Logo" class="church-logo" />
        <h1 class="site-title">Christ’s Church of Starke</h1>
      </div>
    </header>

    <!-- Navigation -->
    <nav class="main-nav">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/our-pastor">Our Pastor</a></li>
        <li><a href="/contact">Contact Us</a></li>
        <li><a href="/about">About Us</a></li>
        <li><a href="/missionaries">Our Missionaries</a></li>
        <li><a href="/sermons">Sermons</a></li>
        <li><a href="/books">Books</a></li>
      </ul>
    </nav>

    <!-- Hero section -->
    <section class="hero">
      <div class="hero-overlay">
        <blockquote>
          <p>Faithful is he that calleth you, who also will do it. -</p>
          <p><strong>1 Thessalonians 5:24</strong></p>
        </blockquote>
      </div>
    </section>

    <!-- Main content -->
    <main class="content">
      {{ content | safe }}
    </main>

    <!-- Footer -->
    <footer class="site-footer">
      <p>&copy; {{ "now" | date("%Y") }} Christ’s Church of Starke. All rights reserved.</p>
    </footer>
  </body>
</html>
{% endraw %}
